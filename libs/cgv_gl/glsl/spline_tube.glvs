#version 430 

in vec4 position;
in vec4 tangent;
in float radius;
//in vec4 color;
in int group_index;

out flat vec4 tangent_gs;
//out vec4 color_gs;

uniform float radius_scale;

void main()
{
	//color_gs = group_color(color, group_index);
	tangent_gs = tangent;
	gl_Position = vec4(position.xyz, radius * radius_scale);
}
