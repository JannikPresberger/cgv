#version 430

const vec3 corners[4] = vec3[4](
	vec3(-1.0, -1.0, +1.0),
	vec3(+1.0, -1.0, +1.0),
	vec3(-1.0, +1.0, +1.0),
	vec3(+1.0, +1.0, +1.0)
);

out vec2 texcoord_fs;

void main()
{
	vec3 corner = corners[gl_VertexID];
	texcoord_fs = 0.5 * corner.xy + 0.5;
	// set z and w component to 1, so the depth is 1 after w-clip
	gl_Position = corner.xyzz;
}
